{
	"options": {
	
	},
	"files": {
		"include": "**/*.scss"
	},
	"rules": {
		"attribute-quotes": 2,
		"bem-depth": [
			2,
			{"max-depth":"0"}
		],
		"border-zero": 2,
		"brace-style": [
			2,
			{
				"style": "stroustrup",
				"allow-single-line": false
			}
		],
		"class-name-format": [
			2,
			{
				"allow-leading-underscore": false,
			}
		],
		"clean-import-paths": 2,
		"declarations-before-nesting": 2,
		"empty-args": [
			2,
			{"include": true}
		],
		"empty-line-between-blocks": 2,
		"extends-before-declarations": 2,
		"extends-before-mixins": 2,
		"final-newline": [
			2,
			{"include":false}
		],
		"force-attribute-nesting": 0,
		"force-element-nesting": 0,
		"force-pseudo-nesting": 0,
		"function-name-format": [
			2,
			{
				"allow-leading-underscore": false,
				"convention": "camelcase"
			}
		],
		"hex-length": 2,
		"hex-notation": 2,
		"id-name-format": [
			2,
			{"allow-leading-underscore"}
		],
		"indentation": [
			2,
			{"size": "tab"}
		],
		"leading-zero": [
			2,
			{"include": true}
		],
		"max-file-line-count": 0,
		"max-line-length": 2,
		"mixin-name-format": [
			2,
			{
				"allow-leading-underscore": false,
				"convention": "camelcase"
			}
		],
		"mixins-before-declarations": 2,
		"nesting-depth": [
			2,
			{"max-depth": 3}
		],
		"no-attribute-selectors": 0,
		"no-color-hex": 2,
		"no-color-keywords": 2,
		"no-color-literals": 2,
		"no-combinators": 0,
		"no-css-comments": 2,
		"no-debug": 2,
		"no-disallowed-properties": 0,
		"no-duplicate-properties": 2,
		"no-empty-rulesets": 2,
		"no-extends": 2,
		"no-ids": 0,
		"no-important": 2,
		"no-invalid-hex": 2,
		"no-mergeable-selectors": 2,
		"no-misspelled-properties": 2,
		"no-qualifiying-elements": 0,
		"no-trailing-whitespace": 2,
		"no-trailing-zero": 2,
		"no-transition-all": 0,
		"no-universal-selectors": 2,
		"no-url-domains": 2,
		"no-url-protocols": 2,
		"no-vendor-prefixes": 2,
		"no-warn": 2,
		"one-declaration-per-line": 2,
		"placeholder-in-extend": 0,
		"placeholder-name-format": 0,
		"property-sort-order": [
			2,
			{
				"order": "concentric"
			}
		],
		"property-units": [
			2,
			{
				"global": ["rem", "px"]
			}
		],
		"pseudo-element": 2,
		"quotes": 2,
		"shorthand-values": 2,
		"single-line-per-selector": 2,
		"space-after-bang": 2,
		"space-after-colon": 2,
		"space-after-comma": 2,
		"space-around-operator": 2,
		"space-before-bang": 2,
		"space-before-brace": 2,
		"space-before-colon": 2,
		"space-between-parens": 2,
		"trailing-semicolon": 2,
		"url-quotes": 2,
		"variable-for-property": [
			2,
			{
				"properties": []
			}
		],
		"variable-name-format": [
			2,
			{
				"allow-leading-underscore": false
			}
		],
		"zero-unit": 2
	}
}